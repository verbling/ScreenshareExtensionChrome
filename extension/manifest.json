{
  "name": "Vling Screensharing Extension",
  "description": "Share your screen / desktop with other Verbling users",
  "version": "1.0.3",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://124.111.160.179:8082/*", "https://verbling.dev:8082/*", "https://*.verbling.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "desktopCapture",
    "https://*.verbling.com/*",
    "https://verbling.dev:8082/*",
    "https://124.111.160.179:8082/*"
  ]
}
